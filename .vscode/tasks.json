{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run",
			"type": "shell",
			"command": "make clean && cmake ../proj/cmake && make -j 4 && ./Debug/NonEuclideanCinder/NonEuclideanCinder",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "./NonEuclideanCinder",
			"options": {
				"cwd": "${workspaceFolder}/build/Debug/NonEuclideanCinder"
			}
		},
		{
			"label": "Make",
			"type": "shell",
			"command": "make",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			}
		},
		{
			"label": "CMake",
			"type": "shell",
			"command": "cmake ../proj/cmake",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceFolder}/build/"
			}
		},
	]
}